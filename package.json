{
  "name": "v2-blue-spruce-pg",
  "version": "1.0.0",
  "description": "Blue Spruce Plant Guide SSR refactor",
  "main": "index.ts",
  "author": "Edwin Montealvo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rm -rf dist",
    "devBuild:client": "webpack serve --config ./webpack.config/client.development.ts --open --hot",
    "devBuild:server": "webpack --config ./webpack.config/server.development.ts --watch",
    "devStart": "nodemon dist/server.js",
    "serve": "yarn clean && run-p -l devBuild:* devStart",
    "build": "webpack --config ./webpack.config/client.production.ts && webpack --config ./webpack.config/server.production.ts",
    "start": "node dist/server.js",
    "test:watch": "jest --watch",
    "test": "jest --forceExit"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.0",
    "@types/cors": "^2.8.8",
    "@types/eslint": "^7.2.4",
    "@types/jest": "^26.0.15",
    "@types/prettier": "^2.1.5",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@apollo/client": "^3.2.5",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-fetch": "^3.0.6",
    "graphql": "^15.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  }
}
